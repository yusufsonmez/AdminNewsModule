@{
    ViewData["Title"] = "Home Page";
}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="page-heading">
    <br>
    <h1>Kayıt Ol</h1>
</div>
</div>
<br>
<div class="row">
    <div class="col-md-6">
        <form method="POST" action="/Register/Register" autocomplete="off">
          <div class="form-group">
              <input type="hidden" name="Id" id="Id" class="form-control">
              <input type="text" name="Name" id="Name" class="form-control" placeholder="Ad">
          </div>
          <div class="form-group">
              <input type="hidden" name="Id" id="Id" class="form-control">
              <input type="text" name="Surname" id="Surname" class="form-control" placeholder="Soyad">
          </div>
          <div class="form-group">
              <input type="hidden" name="Id" id="Id" class="form-control">
              <input type="text" name="Email" id="Email" class="form-control" placeholder="Email">
          </div>
          <div class="form-group">
              <input type="hidden" name="Id" id="Id" class="form-control">
              <input type="password" name="Password" id="Password" class="form-control" placeholder="Password">
          </div>
        <button type="submit" class="btn btn-secondary">Kayıt</button>
        </form>
    </div>
</div>
